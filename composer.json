{
    "name": "bininfo/common",
    "type": "library",
    "description": "Common package for BinInfo credit card information library",
    "keywords": [
        "mberberoglu",
        "bininfo"
    ],
    "homepage": "https://github.com/mberberoglu/bininfo-common",
    "license": "MIT",
    "authors": [
        {
            "name": "Mustafa Berberoglu",
            "email": "mustafaberberoglu@gmail.com",
            "homepage": "https://github.com/mberberoglu",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^5.6|^7",
        "php-http/client-implementation": "^1.0",
        "php-http/discovery": "^1.2.1",
        "php-http/httplug": "^1.1",
        "php-http/message": "^1.5"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=5.4.3",
        "php-http/guzzle6-adapter": "^1.1",
        "mockery/mockery": "^0.9",
        "php-http/mock-client": "^1",
        "squizlabs/php_codesniffer": "^2.8",
        "symfony/http-foundation": "^3"
    },
    "autoload": {
        "psr-4": { "BinInfo\\Common\\" : "src/Common" },
        "classmap": ["src/BinInfo.php"]
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 src/",
        "fix-style": "phpcbf -p --standard=PSR2 src/"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
